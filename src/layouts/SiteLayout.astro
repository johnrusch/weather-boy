---
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-br from-indigo-100 to-purple-100">
      <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8 flex justify-between items-center">
          <div class="flex items-center gap-8">
            <h1 class="text-xl font-semibold text-indigo-600">{title}</h1>
            <SignedIn>
              <nav class="flex gap-4">
                <a href="/" class="text-gray-600 hover:text-indigo-600">Home</a>
                <a href="/flashcards" class="text-gray-600 hover:text-indigo-600">Flashcards</a>
                <a href="/study" class="text-gray-600 hover:text-indigo-600">Study</a>
                <a href="/profile" class="text-gray-600 hover:text-indigo-600">Profile</a>
              </nav>
            </SignedIn>
          </div>
          <div class="flex items-center gap-4">
            <SignedOut>
              <a 
                href="/sign-in"
                class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
              >
                Sign In
              </a>
              <a 
                href="/sign-up"
                class="px-4 py-2 border border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-50 transition-colors"
              >
                Sign Up
              </a>
            </SignedOut>
            <SignedIn>
              <div class="bg-gray-100 rounded-md flex items-center px-3 py-1">
                <span class="text-sm font-medium text-gray-600 mr-2">Language:</span>
                <select
                  id="language-selector"
                  class="bg-transparent border-none text-gray-700 py-1 focus:ring-0 focus:outline-none"
                >
                  <option value="french">French</option>
                  <option value="spanish">Spanish</option>
                </select>
              </div>
              <UserButton 
                afterSignOutUrl="/"
                appearance={{
                  elements: {
                    avatarBox: "w-10 h-10"
                  }
                }}
              />
            </SignedIn>
          </div>
        </div>
      </header>
      <main class="max-w-7xl mx-auto px-4 py-8">
        <slot />
      </main>
    </div>
    <script>
      // Script needs to run both at page load and after any client-side navigation
      function initializeLanguageSelector() {
        const languageSelector = document.getElementById('language-selector');
        if (languageSelector) {
          // Set initial value from localStorage
          const savedLanguage = localStorage.getItem('preferredLanguage') || 'french';
          languageSelector.value = savedLanguage;
          
          // Add change listener (remove old listeners first to avoid duplicates)
          languageSelector.removeEventListener('change', handleLanguageChange);
          languageSelector.addEventListener('change', handleLanguageChange);
        }
      }
      
      function handleLanguageChange(e) {
        const newLang = e.target.value;
        console.log('Language selected in header:', newLang);
        localStorage.setItem('preferredLanguage', newLang);
        window.dispatchEvent(new CustomEvent('languageChanged', { 
          detail: { language: newLang }
        }));
      }

      // Run on DOMContentLoaded
      document.addEventListener('DOMContentLoaded', initializeLanguageSelector);
      
      // Also run the function now in case the DOM is already loaded
      if (document.readyState === 'complete' || document.readyState === 'interactive') {
        initializeLanguageSelector();
      }
    </script>
  </body>
</html> 